%html
  = render partial: 'layouts/header/head'
  %body
    - if content_for?(:modals)
      .row#modals
        = yield(:modals)
    #wrap
      #main
        = render partial: 'layouts/header/header'
        = render partial: 'layouts/header/flash', locals: {flash: flash} 
        = yield
        = render partial: 'layouts/includes/payment_modal'
    = render partial: 'layouts/footer/navigation'