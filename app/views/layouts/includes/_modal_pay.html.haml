- if user_signed_in?
  - if current_user.needs_to_pay?
    #upgradeAccount.reveal-modal{:class => "[expand, xlarge, large, medium, small]"}
      %h2 Upgrade Required
      %p
        Please help us by upgrading and paying for your account. We will give you 5 projects with unlimited error tracking and logging for one yearly fee.
        %br
        %div{align: 'center'}
          %h5 Current annual price
          %h3 $25.99
          %br
          %a.button.round.large.alert{"data-reveal-id" => "chargeCard", :href => "#"} Upgrade
      %a.close-reveal-modal ×
    
    #chargeCard.reveal-modal{:class => "[expand, xlarge, large, medium, small]"}
      %h2 Enter credit card
      %p
        %span.payment-errors
        %form#payment-form{:action => "", :method => "POST"}
          .form-row
            %label Card Number
            %input.card-number{:autocomplete => "off", :size => "20", :type => "text"}
          .form-row
            %label CVC
            %input.card-cvc{:autocomplete => "off", :size => "4", :type => "text"}
          .form-row
            %label Expiration (MM/YYYY)
            %input.card-expiry-month{:size => "2", :type => "text"}
            %span /
            %input.card-expiry-year{:size => "4", :type => "text"}
          %br
          %a.button.round.large.alert{"data-reveal-id" => "chargeCard", :href => "#", :type => "submit"} Upgrade
      %a.close-reveal-modal ×
    :javascript
      $(document).ready(function() {
        $("#upgradeAccount").reveal();
      });