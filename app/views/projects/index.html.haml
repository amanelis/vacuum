.row
  .twelve.columns
    - if @projects.empty?
      .panel
        %h2= link_to "Create your first project", new_project_path
    - else
      %h2 Your Projects
      %table.table
        %thead
          %tr
            %th Name
            %th Last Error
            %th Unesolved
            %th Total
            %th{width: 150}
          %tbody
            - @projects.each do |project|
              %tr
                %td
                  %strong= link_to project.name, project_errors_path(project)
                - if project.errors.count == 0
                  %td
                    %em n/a
                - else
                  %td= time_ago_in_words(project.errors.desc(:updated_at).first.updated_at)
                %td= project.errors.where(resolved: nil).count
                %td= project.errors.count
                %th
                  .small.button.dropdown.round{:href => "#"}
                    Configuration
                    %ul
                      %li
                        %a{href: project_errors_path(project)} Logs
                      %li
                        %a{href: project_path(project, anchor: 'settings') } Settings
                      %li.divider
                      %li
                        = link_to "Delete", project_path(project), :method => :delete, :confirm => "Are you sure you want to delete this project?"
      %div{:align => 'left'}
        %a.success.button.round{:href => new_project_path}
          %i.foundicon-plus
          Create a project
        = will_paginate(@projects)