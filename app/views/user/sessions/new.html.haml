- title "Vacuum.io | Sign in"
.row
  .large-7.columns.large-centered
    %h2 Sign in
    .panel
      = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
        = f.label :email
        = f.email_field :email
        = f.label :password
        = f.password_field :password
        = f.submit "Sign in", :class => 'button round success'
      %p= render "user/shared/links"